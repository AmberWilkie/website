- backgrounded ||= true
- page ||= :default

- if page == :employers

  %section.hero--apply{style: backgrounded ? "background-image: url(#{image_path("backgrounds/postit-wall.jpg")});": ''}
    .container
      .centered-row
        .column
          %h2 Bli en Hiring partner
          %p Det kostar inget innan du hittar rätt person.
      .button-row
        %p
          = link_to 'Har du frågor?', 'http://doodle.com/makers_thomas', class: 'button button--horizontal', target: '_blank'
          = link_to 'Jag vill anställa', config.hire_form_url, class: 'button button--vertical button--large', target: '_blank'
          = link_to 'Ansök till Makers', config.apply_form_url, class: 'button button--horizontal', target: '_blank'
          
- else

  %section.hero--apply{style: backgrounded ? "background-image: url(#{image_path("backgrounds/postit-wall.jpg")});": ''}
    .container
      .centered-row
        .column
          %h2 Apply Now
          %p The full 16-week programme costs £8,000. We run cohorts every 6 weeks, and applications are highly competitive. We offer numerous payment options.
      .button-row
        %p
          - if page == :payment
            = link_to 'Möt tidigare studenter', '/graduates.html', class: 'button button--horizontal'
          - else
            = link_to 'Betalningsplaner', '/payment.html', class: 'button button--horizontal'

          = link_to 'Ansök', config.apply_form_url, class: 'button button--vertical button--large'

          - if page == :about_us
            = link_to 'See Our Curriculum', '/curriculum.html', class: 'button button--horizontal'
          - else
            = link_to 'Läs mer', '/about-us.html', class: 'button button--horizontal'