%section.no-padding-bottom
  .centered-row
    %h2 Biggest
    %h4.subheader Whole sections
  .definition-row
    %aside#definition-top
      %nav.definition-links
        %a.definition-link{href: "#definition-hero-splash"} Hero Splash
        %a.definition-link{href: "#definition-hero"} Hero
        %a.definition-link{href: "#definition-slider"} Slider
        %a.definition-link{href: "#definition-half-slider"} Half Slider
        %a.definition-link{href: "#definition-three-width-fixtures"} Three-width Fixtures
        %a.definition-link{href: "#definition-two-up-video"} Two-up Video
    %article
      .category
        %h4 Hero Splash
        %dl.definition{id: "definition-hero-splash"}
          %dt Large, backgrounded content for page headers
          %dd= partial :"elements/element", locals: { partial_name: "elements/biggest/_hero_splash" }
      .category
        %h4 Hero
        %dl.definition{id: "definition-hero"}
          %dt Large, backgrounded content. Can be anywhere
          %dd= partial :"elements/element", locals: { partial_name: "elements/biggest/_hero" }
      .category
        %h4 Slider
        %dl.definition{id: "definition-slider"}
          %dt Repeated similar content
          %dd= partial :"elements/element", locals: { partial_name: "elements/biggest/_slider" }
      .category
        %h4 Half Slider
        %dl.definition{id: "definition-half-slider"}
          %dt ???
          %dd= partial :"elements/element", locals: { partial_name: "elements/biggest/_half_slider" }
      .category
        %h4 Three-width Fixtures
        %dl.definition{id: "definition-three-width-fixtures"}
          %dt Three-wide image-and-text, with optional CTA
          %dd= partial :"elements/element", locals: { partial_name: "elements/biggest/_three_width_fixtures" }
      .category
        %h4 Two-up Video
        %dl.definition{id: "definition-article"}
          %dt Responsive Videos. Note the wrapper.
          %dd= partial :"elements/element", locals: { partial_name: "elements/biggest/_two_up_video" }