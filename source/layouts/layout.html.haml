!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "noindex", name: "robots"}
    %meta{content: "ie=edge", "http-equiv" => "x-ua-compatible"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    = display_meta_tags site: "Makers Academy - Learn to code in 12 weeks"
    = stylesheet_link_tag "normalize", "all"
    %link{href: image_path("favicons/favicon-32x32.png"), rel: "icon", sizes: "32x32", type: "image/png"}/
    %link{href: image_path("favicons/favicon-96x96.png"), rel: "icon", sizes: "96x96", type: "image/png"}/
    %link{href: image_path("favicons/favicon-16x16.png"), rel: "icon", sizes: "16x16", type: "image/png"}/
    %script{src: "//use.typekit.net/fla8fba.js"}
      :javascript
        try{Typekit.load();}catch(e){}
    = javascript_include_tag  "all"
  %body{class: page_classes}
    %header{class: "navigation", role: "banner"}
      %nav{role: "navigation"}
        %ul.navigation-menu
          %li= link_to "Home", "/"
          %li= link_to "Graduates", "graduates.html"
          %li= link_to "Partners", "partners.html"
          %li= link_to "Curriculum", "curriculum.html"
          %li= link_to "About Us", "about-us.html"
          %li= link_to "Apply", "apply.html", class: "button--apply"

    = yield

    %footer{role: "contentinfo"}
      .container
        .footer-links
          %ul.column
            %li
              %h3 Follow Us
            %li
              = link_to "Facebook", "http://www.facebook.com/MakersAcademy"
            %li
              = link_to "Twitter", "http://twitter.com/makersacademy"
            %li
              = link_to "YouTube", "https://www.youtube.com/user/makersacademy"
          %ul.column
            %li
              %h3 Reviews
            %li
              = link_to "Switchup Reviews", "https://www.switchup.org/bootcamps/makers-academy", target: "_blank"
            %li
              = link_to "Quora Reviews", "https://www.quora.com/makers-academy", target: "_blank"
            %li
              = link_to "Course Report Reviews", "https://www.coursereport.com/schools/makers-academy#/reviews", target: "_blank"
          %ul.column
            %li
              %h3 Legal
            %li
              = link_to "Terms and Conditions", "terms.html"
            %li
              = link_to "Priacy Policy", "privacy.html"
            %li
              / This mixpanel must stay as long as we want free Mixpanel
              %a{href: "https://mixpanel.com/f/partner"}
                %img{alt: "Mobile Analytics", src: "//cdn.mxpnl.com/site_media/images/partner/badge_blue.png"}/
        .footer-copyright
          .footer-logo
            = image_tag "logo/ma-white.png", class: "logo"
          %p
            %small= "&copy; Makers Academy #{Time.now.year}"
