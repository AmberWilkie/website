          %li= link_to "Partners", "partners.html"
          %li= link_to "Curriculum", "curriculum.html"
          %li= link_to "About Us", "about.html"
          %li= link_to "Apply", "apply.html", class: "button--large"

    = yield

    %footer.footer{role: "contentinfo"}
