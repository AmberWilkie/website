!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "noindex", name: "robots"}
    %meta{content: "ie=edge", "http-equiv" => "x-ua-compatible"}/
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    = display_meta_tags site: "Makers Academy - Learn to code in 12 weeks"
    = stylesheet_link_tag "normalize", "all"
    %script{src: "//use.typekit.net/fla8fba.js"}
      :javascript
        try{Typekit.load();}catch(e){}
    = javascript_include_tag  "all"
  %body{class: page_classes}
    %header{class: "navigation", role: "banner"}
      %nav{role: "navigation"}
        %ul.navigation-menu
          %li= link_to "Home", "/"
          %li= link_to "Graduates", "graduates.html"
          %li= link_to "Partners", "partners.html"
          %li= link_to "Curriculum", "curriculum.html"
          %li= link_to "About Us", "about-us.html"
          %li= link_to "Apply", "apply.html", class: "button--apply"

    = yield

    %footer{role: "contentinfo"}
      .container
        .footer-links
          %ul.column
            %li
              %h3 Content
            %li
              %a About
            %li
              %a Contact
            %li
              %a Products
          %ul.column
            %li
              %h3 Follow Us
            %li
              %a Facebook
            %li
              %a Twitter
            %li
              %a YouTube
          %ul.column
            %li
              %h3 Legal
            %li
              %a Terms and Conditions
            %li
              %a Privacy Policy
          %ul.column
            %li
              %h3 Legal
            %li
              %a Terms and Conditions
            %li
              %a Privacy Policy
        .footer-copyright
          .footer-logo
            = image_tag "logo/ma-white.png", class: "logo"
          %p
            %small= "&copy; Makers Academy #{Time.now.year}"
